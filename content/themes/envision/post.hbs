{{!< default}}
{{! Top line inserts this template on main layout}}

{{! Post template start}}
{{#post}}
<article class="{{post_class}}">

<header id="head-wsong">
	{{> menu}}
	
	<div id="mobile-menu-btn-wsong"><span class="fa fa-reorder"></span></div>

	<div id="inside-head-wsong">

		{{#if image}}
		<div id="inside-head-cover-wsong" style="background-image:url({{image}});"></div>
		{{/if}}

		<div id="in-post-meta" class="diffuse-elements">
			<h1 id="in-post-title">{{title}}</h1>
			<time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="LL"}}</time>
			{{tags separator=" "}}
		</div>
		
	</div>
</header>

<section id="in-post-content">
	{{content}}

</section>

<footer id="in-post-footer">
	<section class="share-post">
		<span class="share-label">SHARE ON:</span>
		<a href="https://twitter.com/share?text={{encode title}}&amp;url=http://iamroot.tech{{url}}" 
		onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;"
		class="fa fa-twitter"> <span>Twitter</span></a>
		<a href="https://www.facebook.com/sharer/sharer.php?url=http://iamroot.tech{{url}}" 
		onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;"
		class="fa fa-facebook"> <span>Facebook</span></a>
		<a href="https://plus.google.com/share?url=http://iamroot.tech{{url}}" 
		onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;" 
		class="fa fa-google-plus"> <span>Google+</span></a>
	</section>

	<section class="jump-to-posts">
		<h3>More from {{@blog.title}}</h3>
		
		{{#next_post}}
		<article class="more-from-blog next-post">
			<h4>{{title}}</h4>
			<p>
				{{excerpt words="30"}}...
			</p>
			<a href="{{url}}">See Article</a>
		</article>
		{{/next_post}}

		{{#prev_post}}
		<article class="more-from-blog prev-post">
			<h4>{{title}}</h4>
			<p>
				{{excerpt words="30"}}...
			</p>
			<a href="{{url}}">See Article</a>
		</article>
		{{/prev_post}}
	</section>

	<section class="post-author">
		{{#author}}
		<div class="author-data">
			{{#if image}}
			<img class="author-pic" src="{{image}}" alt="{{name}}">
			{{/if}}
			<div class="author-info">
				<div class="author-name-and-location">
					<h4><a href="{{url}}">{{name}}</a></h4>
					{{#if location}}
						<span class="author-location"><i class="fa fa-map-marker"></i>{{location}}</span>
					{{/if}}
				</div>

				{{#if bio}}
				<p>
					{{bio}}
				</p>
				{{/if}}

				{{#if twitter}}
				<a class="author-twitter" href="{{twitter_url}}"><i class="fa fa-twitter"></i></a>
				{{/if}}

				{{#if facebook}}
				<a class="author-facebook" href="{{facebook_url}}"><i class="fa fa-facebook"></i></a>
				{{/if}}

				{{#if website}}
				<a class="author-website" href="{{website}}"><span class="fa fa-link"></span> {{website}}</a>
				{{/if}}
			</div>
		</div>
		{{/author}}
	</section>

	<section id="comments-area-in-post">
	<div id="disqus_thread"></div>
		<script type="text/javascript">
    	var disqus_shortname = 'debdeep-blog'; // required: replace example with your forum shortname
    	var disqus_identifier = '{{post.id}}';
 
		    /* * * DON'T EDIT BELOW THIS LINE * * */
		    (function() {
		        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
		        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
		        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
		    })();
		</script>
	<noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
	<a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>

	</section>
</footer>

</article>
{{/post}}