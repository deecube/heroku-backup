{{!< default}}
{{! Top line inserts this template on main layout}}

{{! Post template }}
{{#post}}
<main id="main-personal" class="full-size-container">
	<article id="post-page-personal" class="{{post_class}}">

		<header id="post-header-personal" class="post-head archivo-bold ">
			<div class="post-meta-info">
				<time class="post-date">{{date format="MMMM DD, YYYY"}}</time> 

				{{#if tags}}
				<div class="post-tags">
					{{tags separator=" "}}
				</div>
				{{/if}}
			</div>

			<h1 class="post-title">{{title}}</h1>
		</header>

		{{#if image}}
		<div class="post-cover-personal">
			<div class="background-cover" style="background-image:url({{image}})">
				<div class="diffuser"></div>
			</div>
			<div class="center-cover" style="background-image:url({{image}})"></div>
		</div>
		{{/if}}

		<section id="post-content-personal" class="content-column">
			{{content}}
			
		</section>
 
		<footer id="post-footer-personal">
			<div class="author-share">
				<section class="post-author">
					{{#author}}
					{{#if image}}
					<img class="author-pic" src="{{image}}" alt="{{name}}">
					{{/if}}

					<h4 class="author-name libre-bold"><a href="{{url}}">{{name}}</a></h4>

					<div class="author-location-social archivo-bold">
						{{#if twitter}}
						<a class="author-twitter" href="{{twitter_url}}">Twitter</a>
						{{/if}}

						{{#if facebook}}
						<a class="author-facebook" href="{{facebook_url}}">Facebook</a>
						{{/if}}
					</div>

					{{#if bio}}
					<p class="author-bio">{{bio}}</p>
					{{/if}}
					{{/author}}
				</section><section class="share-post">
					<h4 class="share-label libre-bold">Share this post</h4>

					<a class="share-link twitter"
					href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
					onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
						<span class="fa fa-twitter"></span>
					</a>
					<a class="share-link facebook"
					href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
					onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
						<span class="fa fa-facebook"></span>
					</a>
					<a class="share-link google-plus"
					href="https://plus.google.com/share?url={{url absolute="true"}}"
					onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
						<span class="fa fa-google-plus"></span>
					</a>
				</section>
			</div>
		

			
    			{{#get "posts" limit="3" as |articles|}}
    				<aside class="featured-posts">
					<h3>Recent Posts</h3>
        			{{#foreach articles}}
          				<article>
						<h4 class="libre-bold"><a href="{{url}}">{{title}}</a></h4>
						<p>{{excerpt words="38"}}...</p>
						</article>
        			{{/foreach}}
        			</aside>
    			{{/get}}
							
		

<section id="comments-area-in-post" class="content-column"><div id="disqus_thread"></div>
<script type="text/javascript">
    var disqus_shortname = 'debdeep-blog'; // required: replace example with your forum shortname
    var disqus_identifier = '{{post.id}}';
 
    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
</script>
<noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
<a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a></section>
		</footer>
	</article>
</main>
{{/post}}